from turtle import Turtle, Screen

maano_turtle=Turtle();          #creates the object of class Turtle
maano_turtle.shape('turtle')        #changes the shape of turtle
maano_turtle.color('pink')
i=0
while(i<4):
    maano_turtle.forward(100)
    maano_turtle.left(90)
    i+=1

maano_turtle.penup()
maano_turtle.backward(150)
screen=Screen()         #CREATES THE OBJECT OF CLASS SCREEN
screen.exitonclick()  #the screen disappers only when we close it
